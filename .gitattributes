# .gitattributes - Fix GitHub language detection

# Exclude virtual environment and dependencies from language stats
.venv/** linguist-vendored
**/node_modules/** linguist-vendored
**/venv/** linguist-vendored
**/env/** linguist-vendored

# Explicitly mark frontend files
frontend/** linguist-detectable=true
frontend/src/**/*.js linguist-language=JavaScript
frontend/src/**/*.jsx linguist-language=JavaScript
frontend/src/**/*.ts linguist-language=TypeScript
frontend/src/**/*.tsx linguist-language=TypeScript
frontend/src/**/*.css linguist-language=CSS
frontend/src/**/*.html linguist-language=HTML

# Explicitly mark backend files
backend/**/*.py linguist-language=Python

# Mark documentation
*.md linguist-documentation
docs/** linguist-documentation

# Exclude test files from main language stats (optional)
**/*test*.py linguist-vendored=false
**/*test*.js linguist-vendored=false